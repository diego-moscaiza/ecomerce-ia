<script src="../api/users/register.js"></script>


<Layout title="Registrarse">
  <div class="justify-center min-h-[calc(100vh-4rem)] pt-12">
    <div class="max-w-md mx-auto p-4 lg:p-6 md:p-5 sm:p-4">
      <h1 class="text-2xl font-semibold mb-4">Registrarse</h1>
      <form id="register-form" action="" method="POST">
        <!-- Username Input -->
        <div class="mb-4">
          <label for="correo" class="block text-gray-600 dark:text-gray-400 pb-2">Correo electr칩nico</label>

---
import Layout from "../layouts/MainLayout.astro";
---

<Layout title="Cesta">
    <header>
        <h2 class="mt-8 mb-8 text-2xl text-center font-semibold">
            CESTA DE COMPRA
        </h2>
    </header>

    <div class="flex flex-col md:flex-row">
        <!-- Productos seleccionados -->
        <div class="w-full md:w-1/2 p-4 bg-white">
            <div class="block bg-orange-50">
                <h2 class="font-bold text-xl mb-4 text-gray-700">
                    Productos seleccionados
                </h2>
                <div class="flex items-center mb-4">
                    <input type="checkbox" class="mr-2" />
                    <p class="text-gray-600">Selecciona todos los productos</p>
                </div>
            </div>
            <!-- Producto -->
            <div class="flex items-center mb-4 border-b pb-4 bg-orange-50">
                <img
                    src="https://static.zara.net/assets/public/8149/7af1/d7d74347a4ca/578e1c9b9ed4/06462411800-e1/06462411800-e1.jpg?ts=1709823508515&w=750"
                    alt="Producto"
                    class="w-16 h-16 mr-4"
                />
                <div>
                    <h3 class="font-bold text-gray-700">Conjunto para mujer</h3>
                    <p class="text-green-500">S/ 40.00</p>
                </div>
                <div class="ml-auto">
                    <button class="bg-gray-200 px-2">-</button>
                    <span class="mx-2">1</span>
                    <button class="bg-gray-200 px-2">+</button>
                </div>
            </div>
            <!-- Otros productos... -->
        </div>
        <!-- Resumen -->
        <div class="w-full md:w-1/2 p-4 bg-orange-50">
            <h2 class="font-bold text-xl mb-4 text-gray-700">Resumen</h2>
            <p class="mb-4 text-gray-600">
                Total a pagar: <span class="font-bold text-green-500"
                    >S/ 40.00</span>
            </p>
            <button
                class="bg-blue-500 text-white px-4 py-2 mb-2 w-full md:w-auto"
                >Seguir comprando</button
            >
            <button
                class="bg-red-500 text-white px-4 py-2 mb-2 w-full md:w-auto"
                >Cancelar</button
            >
            <button class="bg-green-500 text-white px-4 py-2 w-full md:w-auto"
                >Pagar productos</button
            >
        </div>
    </div>
</Layout>

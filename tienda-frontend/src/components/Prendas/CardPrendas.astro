---
interface Props {
  id: string;
  img: string;
  nombre: string;
  color: string;
  precio: string;
  marca: string;
}

const { id, img, nombre, color, precio, marca } = Astro.props;

const productoId = id && id;
const productoImagen = img && img;
const productoNombre = nombre && nombre;
const productoColor = color && color;
const productoPrecio = precio && precio;
const productoMarca = marca && marca;
---

<article
  class="group relative flex flex-col overflow-hidden rounded-md shadow-md"
>
  <div class="aspect-h-1 aspect-w-1 w-full overflow-hidden rounded-t-md">
    <img
      src={productoImagen}
      alt={`${productoNombre} ${productoColor}`}
      class="h-full w-full object-cover object-center"
    />
  </div>
  <div class="p-4 flex flex-col justify-between">
    <div>
      <h3 class="text-lg font-bold text-gray-700 dark:text-white">
        <a href={`./prendas/${productoId}`}>
          <span aria-hidden="true" class="absolute inset-0"></span>
          {productoNombre}
        </a>
      </h3>
      <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
        {productoMarca}
      </p>
    </div>
    <p class="text-lg font-bold text-gray-900 dark:text-white">
      S/.{productoPrecio}
    </p>
  </div>
</article>
